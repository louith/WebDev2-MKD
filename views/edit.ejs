<!DOCTYPE html>
<html>
  <head>
    <title>Edit User</title>
  </head>
  <body>
    <h1>Edit User</h1>
    <form action="/users/<%= user.id %>" method="POST">
      <input type="text" name="name" value="<%= user.name %>" required />
      <input type="email" name="email" value="<%= user.email %>" required />
      <button type="submit">Update</button>
    </form>
    <a href="/users">Back</a>
  </body>
</html>
